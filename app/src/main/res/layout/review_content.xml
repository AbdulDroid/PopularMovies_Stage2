<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingEnd="@dimen/padding_left_or_right"
    android:paddingLeft="@dimen/padding_left_or_right"
    android:paddingRight="@dimen/padding_left_or_right"
    android:paddingStart="@dimen/padding_left_or_right"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margrinTop_five">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/review_author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center"
            android:paddingLeft="@dimen/padding_left_or_right"
            android:paddingRight="@dimen/padding_left_or_right"
            android:paddingStart="@dimen/padding_left_or_right"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="@string/authors_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingEnd="@dimen/padding_left_or_right"
        android:paddingLeft="@dimen/padding_left_or_right"
        android:paddingRight="@dimen/padding_left_or_right"
        android:paddingStart="@dimen/padding_left_or_right"
        android:paddingTop="@dimen/margrinTop_five"
        android:textSize="18sp"
        tools:text="This movie is awesome and we all know how awesome movies can be
but lets just this is way better tham most awesome movies you might have seen. so watch " />
</LinearLayout>